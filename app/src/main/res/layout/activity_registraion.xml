<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@mipmap/ic_app_logo"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="24dp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:drawableLeft="@mipmap/ic_user"
                android:id="@+id/activity_reg_name"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:drawableLeft="@mipmap/ic_email"
                android:id="@+id/activity_reg_username"
                android:layout_below="@id/activity_reg_name"
                />


            <EditText
                android:id="@+id/activity_reg_Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:layout_below="@id/activity_reg_username"
                android:drawableLeft="@mipmap/ic_pass"
                android:hint="Password"
                />
            <EditText
                android:id="@+id/activity_reg_cnfPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:layout_below="@id/activity_reg_Password"
                android:drawableLeft="@mipmap/ic_repeat"
                android:hint="Repeat Password"
                />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/activity_reg_sign_btn"
                android:layout_marginTop="14dp"
                android:layout_below="@id/activity_reg_cnfPassword"
                android:background="@drawable/signin"
                android:text="Sign Up"
                android:textColor="#FFF"
                android:textAllCaps="false"
                />




        </RelativeLayout>



    </LinearLayout>

</LinearLayout>