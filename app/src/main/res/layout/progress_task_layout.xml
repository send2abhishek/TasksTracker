<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="14dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="July 18"
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/progress_task_date"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="2dp"
        app:cardUseCompatPadding="true"
        android:layout_margin="3dp"
        android:elevation="6dp"
        android:id="@+id/progress_task_cardView"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is Task title"
                android:textSize="18sp"
                android:id="@+id/progress_task_title"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progress_task_side_menu"
                android:gravity="end"
                android:text=":"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginRight="4dp"
                android:layout_toRightOf="@id/progress_task_title"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progress_task_duration"
                android:layout_below="@id/progress_task_title"
                android:text="10:00Am - 12:00Pm"
                android:textSize="12sp"
                android:layout_marginBottom="10dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/progress_task_view"
                android:background="@color/colorPrimaryDark"
                android:layout_below="@id/progress_task_duration"
                />

            <TextView
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:id="@+id/progress_task_desc"
                android:layout_below="@id/progress_task_view"
                android:text="This is task desc which is going to tommorrow"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_below="@id/progress_task_desc"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:text="End Task"
                    android:id="@+id/progress_task_end_task"
                    android:textColor="@color/colorAccent"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:text="Start Task"
                    android:gravity="end"
                    android:id="@+id/progress_task_start_task"
                    android:textColor="@color/colorAccent"
                    />


            </LinearLayout>




        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>